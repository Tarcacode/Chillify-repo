@using System.Security.Claims;
@inject IMemberService MemberService

<h2 class="mt-3">User list</h2>
<AuthorizeView Roles="4, 5">
    <NotAuthorized>
        <p>Sorry, but you are not authorized to see this content.
            Your role is @context?.User?.Claims?.FirstOrDefault(c => c.Type == "role")?.Value
            Are you in role ? @context?.User?.IsInRole("5")
        </p>
    </NotAuthorized>

    <Authorized>
        <p>Bravo! You are authorized @context?.User?.Claims?.FirstOrDefault(c => c.Type == "unique_name")?.Value
            Your role is @context?.User?.Claims?.FirstOrDefault(c => c.Type == "role")?.Value
            Are you in role ? @context?.User?.IsInRole("5")
        </p>
@if (_members.Count == 0)
{
    <span>Loading user list...</span>
}
else
{
    <table class="table table-striped mt-4">
        <thead class="table-primary">
            <tr>
                <th>Email</th>
                <th>Pseudo</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Birth date</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Member member in _members)
            {
                <tr>
                    <td>@member.EmailAddress</td>
                    <td>@member.Pseudo</td>
                    <td>@(member.FirstName ?? "-")</td>
                    <td>@(member.LastName ?? "-")</td>
                    <td>@(member.BirthDate is null ? "-" : member.BirthDate)</td>
                    <td>@member.RoleId</td>
                    <td>Buttons later</td>
                </tr>
            }
        </tbody>

    </table>
}
    </Authorized>
</AuthorizeView>

@code {
    private List<Member> _members = new();
    private string? _message;

    protected override async Task OnInitializedAsync()
    {
        var result = await MemberService.GetMembers();

        if (result.Success == false)
        {
            _message = result.Message;
        }
        else
        {
            _members = result.Data;
        }
    }
}
